<h2>Shoe Brand Distribution</h2>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <% if @brands == [] %>
      <p>There are currently no brands in the database</p>
      <% else %>
      <p>Current Brands</p>
        <ul>
        <% @brands.each() do |brand| %>
        <li><a href="/brands/<%= brand.id() %>"><%= brand.name() %>   $<%= brand.price() %></a></li>
        <% end %>
      </ul>
      <% end %>
    </div>
    <div class="col-md-6">
      <% if @stores == [] %>
      <p>There are currently no stores in the database</p>
      <% else %>
      <p>Current Stores</p>
        <ul>
        <% @stores.each() do |store| %>
        <li><a href="/stores/<%= store.id() %>"><%= store.name() %></a></li>
        <% end %>
      </ul>
      <% end %>

    </div>

  </div>

</div>
